---
import type { CollectionEntry } from "astro:content"
import BottonWave from "@assets/bottonWave.astro"
import Picture from "@molecules/Picture.astro"
import Layout from "@layouts/Layout.astro"

type Props = CollectionEntry<"blog">["data"]

const { title, description, tags, thumbnail, pic_credits } = Astro.props
---

<Layout title={title} btnback>
	<div
		class="bg-surface-alt relative top-0 pt-32 pb-10 text-center bg-linear-to-r"
	>
		<h1 class="titles text-4xl text-ornament-2">{title}</h1>
		<h2 class="text-2xl text-ornament-3 max-w-3xl mx-auto">{description}</h2>
		<h3 class="text-ornament-3 italic">Por Priscila Roza</h3>
		<div class="flex flex-wrap justify-center gap-2 mt-4">
			{
				tags.map((t) => (
					<span class="px-2 py-1 text-sm text-ornament-3 opacity-80 border rounded-lg">
						{t}
					</span>
				))
			}
		</div>
	</div>
	<div class="relative w-screen">
		<BottonWave class="absolute fill-surface-alt inset top-0 z-5" />
		<BottonWave class="absolute fill-ornament-2 top-6 z-4" />
		<BottonWave class="absolute fill-ornament-3 top-12 z-3" />
	</div>
	<article class="w-full">
		<div class="max-w-3xl mx-auto p-4 z-20">
			<Picture
				alt="Imagem ilustrativa"
				blog
				class:list={["aspect-3/2 object-cover max-w-3xl z-[99] relative"]}
				src={thumbnail}
			/>
			<p class="italic text-fg-main-strong text-center text-sm">
				Foto de {pic_credits}
			</p>
			<div class="markdown text-justify mt-10">
				<slot />
			</div>
		</div>
	</article>
</Layout>
